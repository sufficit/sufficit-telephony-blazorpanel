	<ItemGroup Label="Sufficit Dependencies Fixed">
		<PackageReference Include="Sufficit.Blazor.UI.Material" Version="1.22.*" />
	</ItemGroup>
	
	<ItemGroup Label="Sufficit Dependencies on Packing" Condition=" '$(Configuration)' == 'Packing' ">
